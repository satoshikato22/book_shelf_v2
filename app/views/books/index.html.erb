<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<h2>書籍一覧</h2>
<% @books.each do |book| %>
<li><%= book.name %>
<%= link_to'詳細', book_path(book) %>
<%= link_to '編集', edit_book_path(book) %></li>
<%= link_to '削除', book_path(book), method: delete %>
<% end %>

<p><%= link_to'新規追加', new_book_path %></p>